@using Nest_Homework_Partial.ViewModels.Authorization
@model SignInVM
@{
    ViewData["Title"] = "SignIn";
}

<div class="page-content pt-100">
    <div class="container">
        <div class="row">
            <div class="col-xl-8 col-lg-10 col-md-12 m-auto">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="login_wrap widget-taber-content background-white">
                            <div class="padding_eight_all bg-white">
                                <div class="heading_s1">
                                    <h1 class="mb-5">Daxil ol</h1>
                                    <p class="mb-30">Qeydiyyatdan keçmək istəyirsiniz?<a asp-action="Register">Qeydiyyat</a></p>
                                </div>
                                <form method="post">
                                    <div class="form-group">
                                        <input asp-for="UsernameOrEmail" class="form-control" placeholder="İstifadəçi adınız və ya email ünvanınız">
                                        <span class="text-danger" asp-validation-for="UsernameOrEmail"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Password" class="form-control" placeholder="Parolunuz">
                                        <span  class="text-danger"asp-validation-for="Password"></span>
                                    </div>
                                    <div>
                                        <input asp-for="Remember" class="form-check-input"> <label asp-for="Remember" class="form-check-label mr-10">Mən robot deyiləm! </label>
                                        <span class="text-danger" asp-validation-for="Remember"></span>
                                    </div>
                                    <button type="submit" class="btn btn-fill-out btn-block hover-up font-weight-bold" name="login">Giriş</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <partial name="~/Areas/Manage/Views/Shared/_ValidationPartial.cshtml" />
}


